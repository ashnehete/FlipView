<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/recycler_view_item"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content">

	<eu.davidea.flipview.FlipView
		android:id="@+id/flip_view"
		android:layout_width="@dimen/fv_mini_elevated"
		android:layout_height="@dimen/fv_mini_elevated"
		android:layout_gravity="center"
		android:padding="4dp"
		android:clipToPadding="false"
		android:clickable="true"
		app:fv_checked="false"
		app:fv_enableInitialAnimation="true"
		app:fv_frontLayout="@layout/flipview_front_custom_text"
		app:fv_frontBackgroundColor="@color/colorPrimary"
		app:fv_rearLayout="@layout/flipview_rear_custom"
		app:fv_rearBackgroundColor="@color/colorAccent"
		app:fv_rearImageAnimationDelay="0"/>

</FrameLayout>