<?xml version="1.0" encoding="utf-8"?>
<resources>

	<!-- FlipView attributes -->
	<declare-styleable name="FlipView">
		<!-- Whether or not this component is flipped at startup (default: false) -->
		<attr name="fv_checked" format="boolean" />
		<!-- Set the main animation duration (default: 100ms) -->
		<attr name="fv_animationDuration" format="integer" />
		<!-- Anticipate the beginning of the InAnimation (default: 0ms) -->
		<attr name="fv_anticipateInAnimationTime" format="integer" />
		<!-- If main animation should be applied only to the child views from design layout
		     or using inner layout (default: false, use inner layout) -->
		<attr name="fv_animateDesignLayoutOnly" format="boolean" />
		<!-- Whether or not the initial animation should start at the beginning (default: false) -->
		<attr name="fv_enableInitialAnimation" format="boolean" />
		<!-- Set the starting animation (default: scale_up) -->
		<attr name="fv_initialLayoutAnimation" format="reference" />
		<!-- Set the starting animation duration (default: 250ms) -->
		<attr name="fv_initialLayoutAnimationDuration" format="integer" />
		<!-- Use default rear image animation (default: true) -->
		<attr name="fv_animateRearImage" format="boolean" />

		<!-- Front view layout resource (for checked state -> false) -->
		<attr name="fv_frontLayout" format="reference" />
		<!-- Front drawable resource (for checked state -> false) -->
		<attr name="fv_frontBackground" format="reference" />
		<!-- Front view color resource (for checked state -> false) -->
		<attr name="fv_frontBackgroundColor" format="color" />
		<!-- Front image resource -->
		<attr name="fv_frontImage" format="reference" />
		<!-- Front image padding -->
		<attr name="fv_frontImagePadding" format="dimension" />

		<!-- Rear view layout resource (for checked state -> true) -->
		<attr name="fv_rearLayout" format="reference" />
		<!-- Rear drawable resource (for checked state -> true) -->
		<attr name="fv_rearBackground" format="reference" />
		<!-- Rear view color resource (for checked state -> true) -->
		<attr name="fv_rearBackgroundColor" format="color" />
		<!-- Rear accept image resource -->
		<attr name="fv_rearImage" format="reference" />
		<!-- Rear image padding -->
		<attr name="fv_rearImagePadding" format="dimension" />
		<!-- Override the default rear image animation (default: scale_up) -->
		<attr name="fv_rearImageAnimation" format="reference" />
		<!-- Rear image animation delay (default: duration) -->
		<attr name="fv_rearImageAnimationDelay" format="integer" />
		<!-- Rear image animation duration (default: 150ms) -->
		<attr name="fv_rearImageAnimationDuration" format="integer" />
	</declare-styleable>

</resources>